
<style>
	.h6{
		color: #FF0000;
	}

	.main{
		background-color: white;
	}

	.login{
		text-align: center;
	}

	.loginbutton{
		background-color: #eff1f4;
	}
</style>


		<div class="mdl-card mdl-shadow--6dp" style="padding: 0; margin:0;">
			<div class="mdl-card__title mdl-color--primary mdl-color-text--white">
				<h2 class="mdl-card__title-text">HoGent: Mijn Resto</h2>
			</div>
	  	<div class="mdl-card__supporting-text">
				{{#if success_msg}}
					<div class="mdl-card__supporting-text" style="background-color: #BAFFB3">
						{{success_msg}}
					</div>
				{{/if}}
				{{#if error_msg}}
				<div class="mdl-card__supporting-text" style="background-color: #FFB3B3">
					{{error_msg}}
					Incorrecte gegevens!
				</div>
				{{/if}}
				{{#if error}}
				<div class="mdl-card__supporting-text" style="background-color: #FFB3B3">
					{{error}}
					Incorrecte gegevens!
				</div>
				{{/if}}
				<form method="post" action="/users/login">
					<div class="mdl-textfield mdl-js-textfield">
						<input class="mdl-textfield__input" name="username" type="text" id="username" />
						<label class="mdl-textfield__label" for="username">Username</label>
					</div>
					<div class="mdl-textfield mdl-js-textfield">
						<input class="mdl-textfield__input" name="password" type="password" id="userpass" />
						<label class="mdl-textfield__label" for="userpass">Password</label>
					</div>
          <div class="mdl-card__actions login">
    				<button type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect loginbutton"> <i class="material-icons">assignment_ind</i> Log in</button>
    			</div>
				<a href="/users/vergeten" style="font-size: 12px;"> Wachtwoord vergeten? </a>
				</form>
			</div>
		</div>
